%header.page-header
  .rd-navbar-wrap
    %nav.rd-navbar{"data-rd-navbar-lg" => "rd-navbar-static"}
      .rd-navbar-inner

        .rd-navbar-panel
          %button.rd-navbar-toggle{"data-rd-navbar-toggle" => ".rd-navbar"}
            %span
          .rd-navbar-brand
            = link_to 'index.html', class: 'brand-name primary-color' do
              %span.text-ubold.text-uppercase
                = t("company_name")
          %button.rd-collapse-toggle{"data-rd-navbar-toggle" => ".rd-navbar-info"}
            %span

        .top-header
          = link_to t("company_name"), 'index.html', class: 'brand'
          -#= link_to 'index.html' do
            = image_tag 'logo-dark.png', width:'466', height: '70', class: 'img-responsive', alt:''
          -#%dl.rd-navbar-info
            %dt
              M:
            %dd.text-bold
              %a{href:"callto:#"}
                +34 622 133 324

          .rd-navbar-info
            .row
              %dl.col-md-8.col-sm-8.col-xs-8
                %dt
                  M:
                %dd.text-bold
                  %a{href:"callto:#"}
                    +34 622 133 324
              .col-md-1.col-sm-1.col-xs-1
                = link_to "es", "/index.html"
              .col-md-1.col-sm-1.col-xs-1
                = link_to "en", "/es/index.html"
              .col-md-1.col-sm-1.col-xs-1
                = link_to "ca", "/es/index.html"

        = partial 'layouts/nav_bar', locals: {page: "index"}

